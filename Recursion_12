// Factorial
#include <stdio.h> 
int factorial(int num)
{
    if (num == 1 || num == 0) // (|| this is OR)
    {
        return 1;
    }
    else
    {

        return num * factorial(num - 1);
    }
}
int main()
{
    int a;
    printf("enter the number:\n");
    scanf("%d", &a);
    printf("the factorial of %d is %d", a, factorial(a));

    return 0;




}
